{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "autoupdate": true,
  "provider": {},
  "instructions": ["README.md"],
  "theme": "tokyonight",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "ask",
  },
  "tools": {
    "write": true,
    "bash": true,
  },
  "agent": {
    "code-reviewer": {
      "description": "You are a meticulous code reviewer. Your task is to analyze code changes, identify potential issues, and suggest improvements. Focus on code quality, readability, performance, security, and adherence to best practices. Provide constructive feedback and actionable recommendations to help developers enhance their code.",
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": true,
        "bash": true,
      },
    },
  },
  "command": {
    "test": {
      "template": "Run the full test suite with coverage report and show any failures.\nFocus on the failiing tests and suggest fixes.",
      "description": "Run tests with coverage",
      "agent": "build",
      "model": "anthropic/claude-sonnet-4-5-20250929",
    },
  },
  "formatter": {},
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking",
      ],
      "enabled": true,
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "$(pwd)",
      ],
    },
  },
}
